{
  "name": "text2loc-visionary-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Text2Loc Visionary 增强前端 - 基于自然语言的3D点云定位系统（支持语音交互）",
  "author": "Text2Loc Visionary Team",
  "license": "MIT",
  "homepage": "https://github.com/Yan-Xia/Text2Loc",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,scss}\"",
    "type-check": "tsc --noEmit",
    "prepare": "husky install",
    "analyze": "npx vite-bundle-analyzer",
    "serve": "serve dist -s -l 8080"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@chakra-ui/react": "^2.8.0",
    "@emotion/babel-plugin": "^11.13.5",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@react-three/drei": "^9.94.3",
    "@react-three/fiber": "^8.0.0",
    "@swc/plugin-emotion": "^14.5.0",
    "@tanstack/react-query": "^5.0.0",
    "@tanstack/react-query-devtools": "^5.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "axios": "^1.6.2",
    "clsx": "^2.0.0",
    "d3": "^7.0.0",
    "dayjs": "^1.11.10",
    "framer-motion": "^10.16.4",
    "fuse.js": "^7.0.0",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.0.0",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.0",
    "three": "^0.160.0",
    "uuid": "^9.0.1",
    "workbox-window": "^7.0.0",
    "zustand": "^4.4.0",
    "react-speech-recognition": "^3.10.0",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/d3": "^7.4.0",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@types/three": "^0.160.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-legacy": "^5.0.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^8.0.3",
    "jsdom": "^23.0.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.6",
    "serve": "^14.2.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-pwa": "^0.17.4",
    "vite-plugin-svgr": "^4.0.0",
    "vitest": "^1.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "ios_saf >= 12",
      "chrome >= 80",
      "firefox >= 78",
      "safari >= 13",
      "edge >= 88"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  }
}
